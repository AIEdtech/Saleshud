# SalesHud Environment Configuration
# Copy this file to .env and fill in your actual values

# Application Mode
NODE_ENV=development
VITE_APP_ENV=development

# API Keys - AI Services
VITE_CLAUDE_API_KEY=sk-ant-api03-your-claude-api-key-here
VITE_OPENAI_API_KEY=sk-your-openai-api-key-here

# Deepgram Configuration (Real-time Transcription)
VITE_DEEPGRAM_API_KEY=your-deepgram-api-key-here
VITE_DEEPGRAM_API_URL=wss://api.deepgram.com/v1/listen
VITE_DEEPGRAM_MODEL=nova-2
VITE_DEEPGRAM_LANGUAGE=en-US

# Supabase Configuration
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key-here
VITE_SUPABASE_SERVICE_KEY=your-supabase-service-key-here

# Application Configuration
VITE_APP_NAME=SalesHud
VITE_APP_VERSION=1.0.0-beta
VITE_APP_URL=http://localhost:5173

# WebSocket Configuration
VITE_WS_PORT=8080
VITE_WS_HOST=localhost

# Analytics and Monitoring
VITE_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
VITE_MIXPANEL_TOKEN=your-mixpanel-token-here
VITE_GA_TRACKING_ID=G-XXXXXXXXXX

# Email Service Configuration
VITE_SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
VITE_EMAIL_FROM=noreply@saleshud.ai
VITE_EMAIL_REPLY_TO=support@saleshud.ai

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_AI_INSIGHTS=true
VITE_ENABLE_REAL_TIME_TRANSCRIPTION=true
VITE_ENABLE_AUTO_UPDATER=true

# Security
VITE_ENCRYPTION_KEY=your-32-character-encryption-key-here
VITE_JWT_SECRET=your-jwt-secret-here

# Development Tools
VITE_DEV_SERVER_PORT=5173
VITE_ELECTRON_DEV_TOOLS=true

# Auto-Update Configuration
VITE_UPDATE_FEED_URL=https://releases.saleshud.ai
VITE_UPDATE_CHECK_INTERVAL=3600000

# Audio Configuration
VITE_AUDIO_SAMPLE_RATE=16000
VITE_AUDIO_CHANNELS=1
VITE_AUDIO_BIT_DEPTH=16

# Performance Settings
VITE_MAX_RECONNECT_ATTEMPTS=5
VITE_RECONNECT_INTERVAL=5000
VITE_API_TIMEOUT=30000

# Logging
VITE_LOG_LEVEL=info
VITE_LOG_TO_FILE=true
VITE_LOG_FILE_PATH=./logs/saleshud.log